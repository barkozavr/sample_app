<li id="micropost-<%= micropost.id %>">
	<%= link_to gravatar_for(micropost.user, size: 50), micropost.user %>
	<span class="user"><%= link_to micropost.user.name, micropost.user %></span>
	<span class="content">
		<%= micropost.content %>
		<%= image_tag micropost.display_image if micropost.image.attached? %>
	</span>
	<span class="timestamp">
		Posted <%= time_ago_in_words(micropost.created_at) %> ago.
		<% if current_user?(micropost.user) %>
			<%= link_to "delete", micropost, method: :delete,
											 data: { confirm: "Вы уверены?" } %>
		<% end %>
		<!-- just count of created votes -->
		<p><%= @micropost.votes.count %></p>
		<!-- simple implementation of button that create one vote -->
		<!-- the error message is: -->
        <!-- No route matches {:action=>"index", :controller=>"votes", 
		:micropost_id=>nil}, missing required keys: [:micropost_id] -->
		<%= button_to 'Vote', micropost_votes_path(@micropost), method: :post %>
	</span>
</li>